<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @await Html.PartialAsync("_layoutCssPartial")
    <title>@ViewBag.Title - Dashboard - Blog</title>
    <style>
    </style>
</head>

<body>
    <nav id="topNav" class="nav p-0 w-100">
        <div class="w-100">
            <ul class="list-unstyled d-flex justify-content-between mx-3">
                <li class="text-center">
                    <a class="fa-solid fa-chevron-left fs-1 bg-transparent p-3 border-0"></a>
                </li>
                <li class="text-center d-none">
                    <a class="fa-solid fa-chevron-right fs-1 bg-transparent p-3 border-0"></a>
                </li>
                <li class="text-center">
                    <div class="glitch" data-glitch="Admin Sayfasi">Admin Sayfasi</div>
                </li>
                <li class="text-end">
                    <a class="fa-solid fa-right-from-bracket fs-1 bg-transparent p-3 border-0"></a>
                </li>
            </ul>
        </div>
    </nav>

    <section id="body" class="d-flex w-100">
        <!-- ************************leftnav******************************** -->
        <div id="divf">
            @await Html.PartialAsync("_layoutSideNavPartial")
        </div>
        <!-- ************************leftnav******************************** -->
        <!-- ************************content******************************** -->
        <div id="divs" class=" mx-5 d-flex justify-content-center flex-wrap">
            @RenderBody()
            @*partialview: css ve js gibi eklenti dosyalarini ekledigimiz yer olacak*@
            @*rendersection: bir view e has js ve css dosyalarini bulunduran kisim*@
        </div>


        <!-- ************************content******************************** -->
    </section>
    @await Html.PartialAsync("_layoutJsPartial")
    @*render section bodynin sonunda olmali*@
    @await RenderSectionAsync("Scripts",false) 
    @*ilk parametre section ismi (hangi kodlarin calisacagi),
       scripts alani her view icin zorunlu mu oldugunu belirt *@
</body>

</html>
