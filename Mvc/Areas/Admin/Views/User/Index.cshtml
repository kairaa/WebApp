@using Shared.Utilities.Results.ComplexTypes
@model Entities.Dtos.UserListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Kullanicilar Index";
}
@if (Model.resultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Kullanicilar
        </div>
        <div class="card-body">
            <img id="loader" src="~/gif/1479.gif" class="d-none position-absolute"  
                 style="left:50%;top:50%;transform:translate(-50%, -50%)"/>
            <div class="table-responsive">
                <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>ID</th>
                            <th>Kullanici Adı</th>
                            <th>E-Posta</th>
                            <th>E-Posta Dogrulama</th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Resim</th>
                            <th>ID</th>
                            <th>Kullanici Adı</th>
                            <th>E-Posta</th>
                            <th>E-Posta Dogrulama</th>
                            <th>Islemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                        <tr name="@user.Id">
                            <td><img src="~/img/@user.UserPicture" class="my-image-table" /></td>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@(user.EmailConfirmed==true ? "Dogrulandi" : "Dogrulanmadi")</td>
                            <td>
                                <button data-id="@user.Id" class="btn btn-primary btn-edit" style="width: 90px; font-size: 12px;"><span class="fas fa-edit"></span> Duzenle</button>
                                <button data-id="@user.Id" style="width: 90px; font-size: 12px;" class=" btn btn-danger  btn-delete"><span class="fas fa-minus-circle"></span> Kaldir</button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.resultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>
}
@section Scripts
{
    <script src="~/js/userIndex.js" type="application/javascript"></script>
}
