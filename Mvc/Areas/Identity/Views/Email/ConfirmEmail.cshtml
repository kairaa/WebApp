<body>
    <div class="container mt-5 p-5">
        <div class="text-center fw-bold">
            <h1>E-posta Dogrulama Basarili</h1>
        </div>
        <div class="border-top border-success w-100 text-center"
             style="border:4px outset;"></div>
        <div class="text-center fs-4 fw-bold p-5">
            <p>Dogrulama islemi basariyla gerceklesti.</p>
            <p id="closing"></p>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const p = document.getElementById('closing');
        var frag = true;
        var time = 5;
        setInterval(() => {
            p.textContent = `Sayfanin ${time} saniye sonra kapanacak`;
            time--;
            if (time===-1) {
                close();
            }
        }, 1000);       
    </script>
</body>

