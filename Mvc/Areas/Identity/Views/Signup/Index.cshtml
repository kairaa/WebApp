@model Entities.Dtos.SignupDto
@{
    Layout = "_userLoginLayout";
    ViewBag.Title = "Kayit Ol";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Hesap Olustur</h3></div>
                <div class="card-body">
                    <form asp-area="Identity" asp-controller="Signup" asp-action="Signup" method="post">
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="UserName"></label>
                                    <input class="form-control py-4" asp-for="UserName" type="text" />
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" asp-for="Email" type="email" aria-describedby="emailHelp" />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="Password"></label>
                                    <input class="form-control py-4" asp-for="Password" type="password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="PasswordConfirm"></label>
                                    <input class="form-control py-4" asp-for="PasswordConfirm" type="password" />
                                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4 mb-0">
                            <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a class="text-decoration-none" asp-area="Identity" asp-controller="Login" asp-action="Index">Oturum ac</a>
                </div>
            </div>
        </div>
    </div>
</div>